{
  "UserPromptSubmit": [
    { "hooks": [ { "type": "command", "command": "python3 .claude/hooks/user_prompt_submit.py" } ] }
  ],
  "PreToolUse": [
    { "matcher": "*", "hooks": [ { "type": "command", "command": "python3 .claude/hooks/pre_tool_use.py" } ] }
  ],
  "PostToolUse": [
    { "matcher": "Edit|MultiEdit|Write", "hooks": [ { "type": "command", "command": "python3 .claude/hooks/post_tool_use.py" } ] }
  ],

  "SessionStart": [
    { "hooks": [ { "type": "command", "command": "python3 .claude/hooks/session_ephemeral_commit.py" } ] }
  ],
  "SessionEnd": [
    { "hooks": [ { "type": "command", "command": "python3 .claude/hooks/session_ephemeral_commit.py" } ] }
  ],

  "Stop": [
    { "hooks": [ { "type": "command", "command": "python3 .claude/hooks/after_stop_hint.py" } ] },
    { "hooks": [ { "type": "command", "command": "python3 .claude/hooks/experience_update.py" } ] }
  ],
  "SubagentStop": [
    { "hooks": [ { "type": "command", "command": "python3 .claude/hooks/after_stop_hint.py" } ] },
    { "hooks": [ { "type": "command", "command": "python3 .claude/hooks/experience_update.py" } ] }
  ],

  "PreCompact": [
    { "hooks": [ { "type": "command", "command": "python3 .claude/hooks/precompact.py" } ] }
  ],

  "Notification": []
}
