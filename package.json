{
  "name": "sleep-mcp-server",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "sleep:server": "tsx src/sleep-server.ts",
    "fitness:server": "tsx src/fitness-server.ts",
    "cli": "tsx src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "deploy": "npm run build && npx wrangler deploy",
    "dev:worker": "npm run build && npx wrangler dev",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,json}\"",
    "check": "npm run format:check && npm run lint",
    "rotate-secrets": "tsx scripts/rotate-secrets.ts"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251011.0",
    "@eslint/js": "^9.37.0",
    "@types/eslint__js": "^8.42.3",
    "@types/node": "^22.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "prettier": "^3.6.2",
    "tsx": "^4.19.0",
    "typescript": "^5.6.0",
    "typescript-eslint": "^8.46.1",
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.20.0"
  }
}
